@import "tailwindcss";

@theme {
  /* Ocean Color Palette */
  --color-ocean-50: #e8f5f7;
  --color-ocean-100: #d0e7eb;
  --color-ocean-200: #a8e6f0;
  --color-ocean-300: #b3e5fc;
  --color-ocean-400: #4dd0e1;
  --color-ocean-500: #00acc1;
  --color-ocean-600: #0097a7;
  --color-ocean-700: #00838f;
  --color-ocean-800: #006680;
  --color-ocean-900: #00455a;
  --color-ocean-950: #0a3d4d;

  /* Primary Colors */
  --color-primary-light: #00bcd4;
  --color-primary: #0088bb;
  --color-primary-dark: #005577;

  /* Custom Animations */
  --animate-float: float 20s ease-in-out infinite;
  --animate-shimmer: shimmer 3s infinite;
  --animate-pulse-slow: pulse 4s ease-in-out infinite;
  --animate-sparkle: sparkle 2s linear infinite;

  /* Custom Shadows */
  --shadow-ocean: 0 8px 32px rgba(0, 85, 119, 0.1);
  --shadow-ocean-lg: 0 12px 40px rgba(0, 85, 119, 0.15);
  --shadow-glow: 0 0 20px rgba(168, 230, 240, 0.3);

  /* Custom Gradients */
  --gradient-ocean: linear-gradient(135deg, #00a8cc 0%, #0088bb 25%, #006699 75%, #004466 100%);
  --gradient-card: linear-gradient(145deg, #ffffff 0%, #f0f9fb 100%);
}

/* Custom Keyframes */
@keyframes float {

  0%,
  100% {
    transform: translate(0, 0) rotate(0deg);
  }

  33% {
    transform: translate(30px, -30px) rotate(120deg);
  }

  66% {
    transform: translate(-20px, 20px) rotate(240deg);
  }
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }

  100% {
    transform: translateX(100%);
  }
}

@keyframes sparkle {

  0%,
  100% {
    opacity: 0;
  }

  50% {
    opacity: 1;
  }
}

/* Base Styles */
html {
  overflow-x: hidden;
  max-width: 100vw;
}

body {
  background: linear-gradient(180deg, var(--color-ocean-50) 0%, var(--color-ocean-100) 100%);
  color: var(--color-ocean-950);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  line-height: 1.6;
  min-height: 100vh;
  overflow-x: hidden;
  max-width: 100vw;
}

/* Navigation Link Styles */
.nav-link {
  color: #c9f0f7;
  font-weight: 500;
  font-size: 0.875rem;
  padding: 0.5rem 0.75rem;
  border-radius: 0.375rem;
  transition: all 0.3s;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(4px);
  text-decoration: none;
  display: inline-block;
}

.nav-link:hover {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  box-shadow: var(--shadow-glow);
}

.nav-link.active {
  background: rgba(255, 255, 255, 0.25);
  color: white;
  box-shadow: var(--shadow-glow);
}

@media (min-width: 768px) {
  .nav-link {
    font-size: 1rem;
  }
}

/* Hero Section */
.hero-section {
  background: var(--gradient-ocean);
  padding: 3rem 0;
  text-align: center;
  position: relative;
  overflow: hidden;
}

@media (min-width: 768px) {
  .hero-section {
    padding: 5rem 0;
  }
}

.hero-title {
  font-size: 2.25rem;
  font-weight: 700;
  color: var(--color-ocean-200);
  margin-bottom: 1rem;
  filter: drop-shadow(0 4px 20px rgba(0, 0, 0, 0.3));
}

@media (min-width: 768px) {
  .hero-title {
    font-size: 3.75rem;
  }
}

.hero-subtitle {
  font-size: 1.125rem;
  color: #c9f0f7;
  margin-bottom: 2rem;
  font-weight: 300;
}

@media (min-width: 768px) {
  .hero-subtitle {
    font-size: 1.25rem;
  }
}

/* Button Styles */
.btn-primary {
  background: linear-gradient(to right, #00c9a7, #00a8cc);
  color: white;
  font-weight: 600;
  padding: 0.75rem 2rem;
  border-radius: 0.5rem;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
  transform: translateY(0);
  border: none;
  cursor: pointer;
  display: inline-block;
}

.btn-primary:hover {
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  transform: translateY(-2px);
  background: linear-gradient(to right, #00d4b1, #00b8dc);
}

/* Card Styles */
.experiment-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(8px);
  border-radius: 0.75rem;
  padding: 1.5rem;
  box-shadow: var(--shadow-ocean-lg);
  transition: all 0.3s;
  border: 1px solid rgba(0, 168, 204, 0.2);
  position: relative;
}

.experiment-card:hover {
  box-shadow: 0 8px 30px rgba(0, 85, 119, 0.25);
  transform: translateY(-4px);
}

.card-title {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--color-primary-dark);
  margin-bottom: 0.5rem;
}

@media (min-width: 768px) {
  .card-title {
    font-size: 1.5rem;
  }
}

.card-description {
  color: var(--color-ocean-950);
  font-size: 0.875rem;
  margin-bottom: 1rem;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

@media (min-width: 768px) {
  .card-description {
    font-size: 1rem;
  }
}

/* Progress Bar */
.progress-bar {
  width: 100%;
  height: 0.75rem;
  background: #e0f2f5;
  border-radius: 9999px;
  overflow: hidden;
  margin-bottom: 0.75rem;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(to right, #00c9a7, #00a8cc);
  border-radius: 9999px;
  transition: width 0.5s;
}

/* Tag Styles */
.tag {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  font-size: 0.75rem;
  font-weight: 500;
  background: rgba(0, 168, 204, 0.1);
  color: var(--color-primary-dark);
  border-radius: 9999px;
  margin-right: 0.5rem;
  margin-bottom: 0.5rem;
}